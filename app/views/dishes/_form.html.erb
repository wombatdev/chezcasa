
<%= form_for @dish, :html => {:multipart => true} do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :photo %>
<%= f.file_field :photo %>
<br>
<%= f.label :ingredients %>
<% 15.times do |n| %>
    <% if @dish.ingredients[n] %>
        <input name="dish[ingredients][]" type="text" value="<%=@dish.ingredients[n]%>"/>
        <% else %>
        <input name="dish[ingredients][]" type="text"/>
    <% end %>
<% end %>
<br>
<%= f.label :tags %>
<% 6.times do |n| %>
<% if @dish.tags[n] %>
    <input name="dish[tags][]" type="text" value="<%=@dish.tags[n]%>"/>
    <% else %>
    <input name="dish[tags][]" type="text"/>
<% end %>
<% end %>
<br>
<%= f.label :category %>
<% 6.times do |n| %>
    <% if @dish.category[n] %>
        <input name="dish[category][]" type="text" value="<%=@dish.category[n]%>"/>
    <% else %>
        <input name="dish[category][]" type="text"/>
    <% end %>
<% end %>
<br>
<%= f.label :price %>
<%= f.text_field :price %>
<br>
<%= f.label :portion %>
<%= f.text_field :portion %>
<br>
<%= f.label :quantity %>
<%= f.text_field :quantity %>
<br>
<%= f.label :description %><br />
<%= f.text_area :description, class:'foodDesc' %>
<br>
  <%= f.submit %>

<% end %>
